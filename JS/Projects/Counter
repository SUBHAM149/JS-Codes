<body>
    <div id="counter">
        <h1 id="count">0</h1>
        <button id="btn" onclick="incr()">+</button>
          <button id="btn" onclick="decr()">-</button>
            <button id="btn" onclick="reset()">Reset</button>
    </div>
    <script src="./script.js"></script>
</body>
